<h1> All Posts</h1>
<% @posts.each do |post| %>
  <h4>
    <%= link_to post.title, post_path(post) %>
  </h4>
  <p>
    <%= post.user.name %>
  </p>
  <p>
    <b> <%= post.category.title %> </b>
  </p>
  <p>
    <%= h truncate(post.body, :length => 100 )%>
  </p>
  <p>
    <%= image_tag post.picture.url(:small) if post.picture.present? %>
  </p>
  <p>
    <%= link_to 'read more', post_path(post) %>
  </p>
  <hr>
<% end %>